doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title ANZOOM
        <link rel="stylesheet" href="https://unpkg.com/mvp.css">  
        link(rel="stylesheet", href="css/index.css")       
    body 
        header 
            h1 ANZOOM
            p.nickname
        main             
            div#welcome
                form.nickname_form
                    input(type="text", placeholder="닉네임을 입력해주세요.(선택사항)")
                    button 저장
                form.room_form
                    input(type="text", placeholder="방 이름을 입력해주세요.", required)
                    button 들어가기
            div#room                
                h2.room_name
                ul.chat_list
                form.message_form
                    input(type="text", placeholder="메시지를 입력해주세요.", required)
                    button 전송    
        script(src="/socket.io/socket.io.js")
        script(src="js/index.js")